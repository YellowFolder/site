#!/usr/bin/env bash

set -e

root="$(git rev-parse --show-toplevel)"

pushd "$root"

if [ ! -f .env ]; then
    echo ""
    echo "Copying default .env file."
    cp .env.dist /.env
fi

docker-compose up -d "$@"
echo "Waiting for docker to boot up..."
sleep 5

docker build -t yellowfolder -f ./Dockerfile .

popd
